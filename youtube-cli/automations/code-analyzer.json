{
  "id": "code-analyzer",
  "version": "1.0.0",
  "metadata": {
    "name": "Code Analyzer",
    "description": "Analisa arquivos TypeScript e gera relat√≥rio",
    "author": "FLUI Team",
    "created": "2025-11-04",
    "tags": ["code", "analysis"],
    "category": "development"
  },
  "triggers": [
    {
      "type": "contains",
      "pattern": "analisar c√≥digo"
    }
  ],
  "variables": {
    "filesList": {"type": "string", "defaultValue": ""},
    "reportPath": {"type": "string", "defaultValue": "code-analysis-report.md"}
  },
  "steps": [
    {
      "id": "1",
      "type": "log",
      "message": "üîç Iniciando an√°lise de c√≥digo...",
      "level": "info"
    },
    {
      "id": "2",
      "type": "tool",
      "toolName": "find_files",
      "toolArgs": {
        "pattern": "*.ts",
        "directory": "source"
      },
      "saveResultAs": "filesList"
    },
    {
      "id": "3",
      "type": "tool",
      "toolName": "write_file",
      "toolArgs": {
        "file_path": "${variables.reportPath}",
        "content": "# Code Analysis Report\n\n**Project:** FLUI\n**Generated:** Automated Analysis\n\n## Files Found\n\n${variables.filesList}\n\n## Status\n\nAnalysis completed successfully.\n"
      }
    },
    {
      "id": "4",
      "type": "log",
      "message": "‚úÖ Relat√≥rio gerado: ${variables.reportPath}",
      "level": "success"
    }
  ],
  "errorHandling": {
    "onStepError": "skip",
    "maxRetries": 0,
    "logErrors": true
  }
}
