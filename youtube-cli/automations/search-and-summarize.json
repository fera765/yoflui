{
  "id": "search-and-summarize",
  "version": "1.0.0",
  "metadata": {
    "name": "Search and Summarize",
    "description": "Searches for information online and creates a summary",
    "author": "Flui Team",
    "created": "2025-11-02",
    "tags": ["research", "web", "summary"],
    "category": "research"
  },
  "triggers": [
    {
      "type": "contains",
      "pattern": "pesquisar sobre"
    },
    {
      "type": "contains",
      "pattern": "research about"
    },
    {
      "type": "contains",
      "pattern": "buscar informa??es"
    }
  ],
  "variables": {
    "searchTopic": {
      "type": "string",
      "defaultValue": "latest tech news"
    },
    "webContent": {
      "type": "string",
      "defaultValue": ""
    },
    "summary": {
      "type": "string",
      "defaultValue": ""
    }
  },
  "steps": [
    {
      "id": "step_1",
      "type": "log",
      "message": "?? Starting research...",
      "level": "info"
    },
    {
      "id": "step_2",
      "type": "log",
      "message": "?? Analyzing and summarizing information...",
      "level": "info"
    },
    {
      "id": "step_3",
      "type": "llm_process",
      "prompt": "Research and provide a comprehensive summary about: ${variables.searchTopic}\n\nInclude:\n1. Key facts and information\n2. Recent developments\n3. Important considerations\n4. Relevant examples\n\nProvide well-structured, informative content.",
      "useContext": true,
      "saveResultAs": "summary"
    },
    {
      "id": "step_4",
      "type": "tool",
      "toolName": "write_file",
      "toolArgs": {
        "file_path": "research-${Date.now()}.md",
        "content": "# Research Summary\n\n**Topic:** ${variables.searchTopic}\n\n**Date:** ${Date.now()}\n\n## Summary\n\n${variables.summary}"
      }
    },
    {
      "id": "step_5",
      "type": "log",
      "message": "? Research complete! Summary saved.",
      "level": "success"
    }
  ],
  "errorHandling": {
    "onStepError": "abort",
    "maxRetries": 1,
    "logErrors": true
  }
}
