{
  "id": "hello-world",
  "version": "1.0.0",
  "metadata": {
    "name": "Hello World",
    "description": "Simple automation to test the system",
    "author": "Flui Team",
    "created": "2025-11-02",
    "tags": ["test", "hello", "basic"],
    "category": "examples"
  },
  "triggers": [
    {
      "type": "exact",
      "pattern": "hello automation",
      "caseSensitive": false
    },
    {
      "type": "exact",
      "pattern": "teste automa??o"
    }
  ],
  "variables": {
    "userName": {
      "type": "string",
      "defaultValue": "User",
      "description": "Name of the user"
    },
    "timestamp": {
      "type": "string",
      "defaultValue": "",
      "description": "Execution timestamp"
    }
  },
  "steps": [
    {
      "id": "step_1",
      "type": "log",
      "message": "?? Hello, ${variables.userName}!",
      "level": "info"
    },
    {
      "id": "step_2",
      "type": "set_variable",
      "variableName": "timestamp",
      "value": "${Date.now()}"
    },
    {
      "id": "step_3",
      "type": "tool",
      "toolName": "write_file",
      "toolArgs": {
        "file_path": "hello-automation-${variables.timestamp}.txt",
        "content": "Hello from automation at ${variables.timestamp}!\n\nGreetings, ${variables.userName}!"
      }
    },
    {
      "id": "step_4",
      "type": "log",
      "message": "? File created successfully!",
      "level": "success"
    }
  ],
  "errorHandling": {
    "onStepError": "abort",
    "maxRetries": 0,
    "logErrors": true
  }
}
