{
  "id": "create-readme",
  "version": "1.0.0",
  "metadata": {
    "name": "Create README",
    "description": "Generates a comprehensive README.md for the project",
    "author": "Flui Team",
    "created": "2025-11-02",
    "tags": ["documentation", "readme", "markdown"],
    "category": "documentation"
  },
  "triggers": [
    {
      "type": "contains",
      "pattern": "criar readme"
    },
    {
      "type": "contains",
      "pattern": "create readme"
    },
    {
      "type": "contains",
      "pattern": "gerar readme"
    }
  ],
  "variables": {
    "projectFiles": {
      "type": "string",
      "defaultValue": ""
    },
    "readmeContent": {
      "type": "string",
      "defaultValue": ""
    }
  },
  "steps": [
    {
      "id": "step_1",
      "type": "log",
      "message": "?? Creating README for your project...",
      "level": "info"
    },
    {
      "id": "step_2",
      "type": "tool",
      "toolName": "read_folder",
      "toolArgs": {
        "path": "."
      },
      "saveResultAs": "projectFiles"
    },
    {
      "id": "step_3",
      "type": "log",
      "message": "?? Analyzing project and generating README...",
      "level": "info"
    },
    {
      "id": "step_4",
      "type": "llm_process",
      "prompt": "Create a comprehensive README.md for this project based on its structure:\n\n${variables.projectFiles}\n\nInclude:\n1. Project title and description\n2. Installation instructions\n3. Usage examples\n4. Features\n5. Contributing guidelines\n6. License\n\nMake it professional and complete.",
      "useContext": true,
      "saveResultAs": "readmeContent"
    },
    {
      "id": "step_5",
      "type": "tool",
      "toolName": "write_file",
      "toolArgs": {
        "file_path": "README.md",
        "content": "${variables.readmeContent}"
      }
    },
    {
      "id": "step_6",
      "type": "log",
      "message": "? README.md created successfully!",
      "level": "success"
    }
  ],
  "errorHandling": {
    "onStepError": "abort",
    "maxRetries": 1,
    "logErrors": true
  }
}
