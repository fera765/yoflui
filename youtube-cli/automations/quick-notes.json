{
  "id": "quick-notes",
  "version": "1.0.0",
  "metadata": {
    "name": "Quick Notes",
    "description": "Quickly save notes to a file with timestamp",
    "author": "Flui Team",
    "created": "2025-11-02",
    "tags": ["notes", "quick", "productivity"],
    "category": "productivity"
  },
  "triggers": [
    {
      "type": "contains",
      "pattern": "anotar"
    },
    {
      "type": "contains",
      "pattern": "fazer nota"
    },
    {
      "type": "contains",
      "pattern": "quick note"
    }
  ],
  "variables": {
    "timestamp": {
      "type": "string",
      "defaultValue": ""
    },
    "note": {
      "type": "string",
      "defaultValue": "Note content"
    }
  },
  "steps": [
    {
      "id": "step_1",
      "type": "set_variable",
      "variableName": "timestamp",
      "value": "${Date.now()}"
    },
    {
      "id": "step_2",
      "type": "log",
      "message": "?? Saving note...",
      "level": "info"
    },
    {
      "id": "step_3",
      "type": "tool",
      "toolName": "write_file",
      "toolArgs": {
        "file_path": "notes/note-${variables.timestamp}.md",
        "content": "# Note\n\n**Date:** ${variables.timestamp}\n\n${variables.note}\n"
      }
    },
    {
      "id": "step_4",
      "type": "log",
      "message": "? Note saved to notes/note-${variables.timestamp}.md",
      "level": "success"
    }
  ],
  "errorHandling": {
    "onStepError": "abort",
    "maxRetries": 0,
    "logErrors": true
  }
}
