{
  "id": "data-pipeline",
  "version": "1.0.0",
  "metadata": {
    "name": "Data Pipeline",
    "description": "Pipeline de processamento de dados",
    "author": "FLUI Team",
    "created": "2025-11-04",
    "tags": ["data", "pipeline"],
    "category": "data-processing"
  },
  "triggers": [
    {
      "type": "contains",
      "pattern": "pipeline"
    }
  ],
  "variables": {
    "pipelineId": {"type": "string", "defaultValue": ""}
  },
  "steps": [
    {
      "id": "1",
      "type": "log",
      "message": "ðŸš€ Pipeline iniciado...",
      "level": "info"
    },
    {
      "id": "2",
      "type": "set_variable",
      "variableName": "pipelineId",
      "value": "pipeline-001"
    },
    {
      "id": "3",
      "type": "log",
      "message": "ðŸ“¥ Coletando dados...",
      "level": "info"
    },
    {
      "id": "4",
      "type": "tool",
      "toolName": "write_file",
      "toolArgs": {
        "file_path": "pipeline-${variables.pipelineId}.json",
        "content": "{\"pipeline_id\":\"${variables.pipelineId}\",\"status\":\"completed\",\"data\":{\"users\":150,\"revenue\":12500}}"
      }
    },
    {
      "id": "5",
      "type": "log",
      "message": "âœ… Pipeline ${variables.pipelineId} concluÃ­do!",
      "level": "success"
    }
  ],
  "errorHandling": {
    "onStepError": "skip",
    "maxRetries": 0,
    "logErrors": true
  }
}
